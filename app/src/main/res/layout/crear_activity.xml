<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.climate.fight.ui.crear.CrearActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <com.climate.fight.views.ButtonCompatible
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new_ev_back"
            android:textColor="@color/white"
            android:padding="16dp"
            android:text="@string/back"
            android:background="?selectableItemBackground"
            app:drawableLeftCompat="@drawable/ic_back"/>
        <com.climate.fight.views.ButtonCompatible
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new_ev_next"
            android:textColor="@color/white"
            android:padding="16dp"
            android:text="@string/next"
            android:background="?selectableItemBackground"
            app:drawableRightCompat="@drawable/ic_next"/>
    </LinearLayout>
</LinearLayout>
